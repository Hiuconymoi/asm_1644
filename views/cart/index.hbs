<div class="px-4 px-lg-0">

  <div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each productOrder }}
                    <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src="{{image}}" alt="" width="70" class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="" class="text-dark d-inline-block align-middle">{{ name }}</a></h5><span class="text-muted font-weight-normal font-italic d-block">FROM: ATNStore</span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>${{ price }}</strong></td>
                  <td class="border-0 align-middle"><strong>{{ quantity }}</strong></td>
                  <td class="border-0 align-middle">
                    <a class="btn btn-danger" href="/cart/delete/{{id}}"
            onclick="return confirm('Are you sure to delete this student?');">Delete</a>
                  </td>
                </tr>
                {{/each}}
                
              </tbody>
            </table>
            <div class="container text-right">
                <h4 style="color:rgb(21, 165, 198)">TOTAL</h4>
                <h5 style="color:rgb(224, 6, 159)">${{ total }}</h5>
            </div>
          </div>
          <!-- End -->
        </div>
      </div>

    </div>
  </div>
</div>